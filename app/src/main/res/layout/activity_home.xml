<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            style="@style/MainActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_logo1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/MainActionBarTitle"
                        android:text="@string/home_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <View
                        style="@style/MainActionBarTitle"
                        android:text="@string/home_title" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/HomoeMainlayoutStyle"
                    android:weightSum="2">

                    <LinearLayout
                        style="@style/HomeInnerLayoutStyle"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_siren"
                            android:id="@+id/home_siren"
                            android:clickable="true"
                            android:onClick="onClickSiren"
                            />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/HomeInnerLayoutStyle"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_key_unlock"
                            android:id="@+id/home_key_lock"
                            android:clickable="true"
                            android:onClick="onClickLock"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    style="@style/HomoeMainlayoutStyle"
                    android:paddingTop="10dp">

                    <LinearLayout style="@style/HomeInnerLayoutStyle">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_camera"
                            />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/HomeInnerLayoutStyle"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_location"
                            android:clickable="true"
                            android:onClick="onClick_Google_map"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    style="@style/HomoeMainlayoutStyle"
                    android:paddingTop="10dp">

                    <LinearLayout style="@style/HomeInnerLayoutStyle">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_call"
                            android:clickable="true"
                            android:onClick="onClick_PhoneCall"
                            />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/HomeInnerLayoutStyle"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            style="@style/HomeImageViewStyle"
                            android:src="@drawable/ic_setting"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

